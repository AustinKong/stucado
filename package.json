{
  "name": "stucado",
  "version": "2.0.0",
  "description": "A data driven productivity app for students",
  "main": "./out/main/index.js",
  "type": "module",
  "author": [
    "Austin Kong",
    "Ea Jing Le"
  ],
  "homepage": "https://github.com/AustinKong/stucado",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@phosphor-icons/react": "^2.1.5",
    "@reduxjs/toolkit": "^2.2.5",
    "axios": "^1.7.2",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "redux": "^5.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "5.1.6",
    "uuid": "^10.0.0",
    "vite-plugin-svgr": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "redux-mock-store": "^1.5.4",
    "vite": "^5.0.12"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2|svg)$": "jest-transform-stub",
      "^@components(.*)$": "<rootDir>/src/renderer/components$1",
      "^@services(.*)$": "<rootDir>/src/renderer/services$1",
      "^@assets(.*)$": "<rootDir>/src/renderer/assets$1",
      "^@data(.*)$": "<rootDir>/src/renderer/data$1"
      "^@shared/(.*)$": "<rootDir>/src/shared/$1"
    },
    "testEnvironment": "jsdom"
  }
}
